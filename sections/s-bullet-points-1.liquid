{%- assign sell_bullets = 's-bullet-points-1' -%}
{%- assign sid = section.id -%}


{%- style -%}




  .{{ sell_bullets }}--{{ sid }} {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    background-color: {{ section.settings.background_color }};
    border: {{ section.settings.border_thickness }}px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_left }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_right }}px;
    {% if section.settings.full_width == false %}
            {% if section.settings.custom_width == 'custom-width' %}
              width:100%;
              max-width:{{ section.settings.sec_mx_width }}px;
            {% else %}
              width:max-content;
              max-width:100%;
            {% endif %}
    {% else %}
            width:100%;
    {% endif %}
          {%  if section.settings.cont_align  == 'end' %}
            margin-left:auto;
            margin-right:unset;
          {% elsif section.settings.cont_align  == 'center' %}
            margin-left:auto;
            margin-right:auto;
          {% else %}
            margin-left:unset;
            margin-right:auto;
          {% endif %}
  }


  .{{ sell_bullets }}--{{ sid }} .bullets-container {
    display: flex;
    flex-direction: {{ section.settings.direction }};
    align-items: {{ section.settings.items_align }};
    justify-content: {{ section.settings.items_justify }};
    gap: {{ section.settings.gap_between_blocks }}px;
    flex-wrap: wrap;
  }


  .{{ sell_bullets }}--{{ sid }} .bullet-item {
    display: flex;
    align-items: {{ section.settings.item_align }};
    gap: {{ section.settings.icon_text_gap }}px;
    flex: {{ section.settings.item_flex }};
    min-width: {{ section.settings.item_min_width }}px;
  }


  .{{ sell_bullets }}--{{ sid }} .bullet-icon {
    flex-shrink: 0;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }


  .{{ sell_bullets }}--{{ sid }} .bullet-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }


  .{{ sell_bullets }}--{{ sid }} .bullet-text {
    font-size: {{ section.settings.bullet_font_size }}px;
    font-weight: {{ section.settings.bullet_font_weight }};
    line-height: {{ section.settings.bullet_line_height }};
    letter-spacing: {{ section.settings.bullet_letter_spacing }}em;
    text-transform: {{ section.settings.bullet_text_transform }};
  }


  @media screen and (max-width: 767px) {
    .{{ sell_bullets }}--{{ sid }} {
      margin-top: {{ section.settings.margin_top_mob }}px !important;
      margin-bottom: {{ section.settings.margin_bottom_mob }}px !important;
      border-radius: {{ section.settings.border_radius_mob }}px !important;
      padding: {{ section.settings.padding_top_mob }}px {{ section.settings.padding_left_mob }}px {{ section.settings.padding_bottom_mob }}px {{ section.settings.padding_right_mob }}px !important;
    }


    .{{ sell_bullets }}--{{ sid }} .bullets-container {
      flex-direction: {{ section.settings.direction_mob }} !important;
      align-items: {{ section.settings.items_align_mob }} !important;
      justify-content: {{ section.settings.items_justify_mob }} !important;
      gap: {{ section.settings.gap_between_blocks_mob }}px !important;
    }


    .{{ sell_bullets }}--{{ sid }} .bullet-item {
      align-items: {{ section.settings.item_align_mob }} !important;
      gap: {{ section.settings.icon_text_gap_mob }}px !important;
      flex: {{ section.settings.item_flex_mob }} !important;
      min-width: {{ section.settings.item_min_width_mob }}px !important;
    }


    .{{ sell_bullets }}--{{ sid }} .bullet-icon {
      width: {{ section.settings.icon_size_mob }}px !important;
      height: {{ section.settings.icon_size_mob }}px !important;
    }


    .{{ sell_bullets }}--{{ sid }} .bullet-text {
      font-size: {{ section.settings.bullet_font_size_mob }}px !important;
      line-height: {{ section.settings.bullet_line_height_mob }} !important;
      letter-spacing: {{ section.settings.bullet_letter_spacing_mob }}em !important;
    }
  }
{%- endstyle -%}


{%- capture section_s-bullet-points-1 -%}
<div class="{{ sell_bullets }}--{{ sid }}">
  <div class="bullets-container">
    {% for block in section.blocks %}
      {% if block.type == 'bullet' %}
        {%- liquid
          assign size_1x = section.settings.icon_size | at_least: 8
          assign size_2x = size_1x | times: 2
          assign size_3x = size_1x | times: 3
        -%}
        <div class="bullet-item" {{ block.shopify_attributes }}>
          <div class="bullet-icon">
            {%- if block.settings.bullet_icon != blank -%}
              <img
                src="{{ block.settings.bullet_icon | image_url: width: size_2x }}"
                srcset="
                  {{ block.settings.bullet_icon | image_url: width: size_1x }} 1x,
                  {{ block.settings.bullet_icon | image_url: width: size_2x }} 2x,
                  {{ block.settings.bullet_icon | image_url: width: size_3x }} 3x
                "
                alt="{{ block.settings.bullet_icon.alt | default: 'Icon' }}"
                width="{{ size_1x }}"
                height="{{ size_1x }}"
                decoding="async"
                loading="lazy">
            {%- else -%}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#999"/>
              </svg>
            {%- endif -%}
          </div>
          {% if block.settings.bullet_text != blank %}
            <div class="bullet-text" style="color: {{ block.settings.bullet_text_color | default: section.settings.bullet_text_color }};">
              {{ block.settings.bullet_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
{%- endcapture -%}


{%- if section.settings.custom_display -%}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var el = document.getElementById('s-bullet-points-1');
      if (el && !el.hasAttribute('data-bullets-loaded')) {
        el.insertAdjacentHTML('afterbegin', `{{ section_s-bullet-points-1 | strip_newlines | replace: '"', '\"' }}`);
        el.setAttribute('data-bullets-loaded', 'true');
      }
    });
  </script>
{%- else -%}
  {{ section_s-bullet-points-1 }}
{%- endif -%}


